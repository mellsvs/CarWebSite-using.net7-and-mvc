@model WebDers.Service.Models.CarBlog

@{
    ViewData["Title"] = "YeniBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Blog Ekle</h1>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

</head>
<body>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Save">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CarBlogTittle" class="control-label"></label>
                    <input asp-for="CarBlogTittle" class="form-control" />
                    <span asp-validation-for="CarBlogTittle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CarBlogDescription" class="control-label"></label>
                    <input asp-for="CarBlogDescription" class="form-control" />
                    <span asp-validation-for="CarBlogDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CarBlogImage" class="control-label"></label>
                    <input asp-for="CarBlogImage" class="form-control" />
                    <span asp-validation-for="CarBlogImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CarBlogDate" class="control-label"></label>
                    <input asp-for="CarBlogDate" class="form-control" />
                    <span asp-validation-for="CarBlogDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AdminAnaSayfa">Listeye Geri Dön</a>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
